    },
    {
      "id": 17,
      "type": "timeseries",
      "title": "Indexer Errors by Type",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 38
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (type) (rate(indexer_errors_total{job=~\"$job\",environment=~\"$environment\",evm_chain_id=~\"$evm_chain_id\",region=~\"$region\",cloud_provider=~\"$cloud_provider\"}[5m]))",
          "legendFormat": "{{type}}"
        }
