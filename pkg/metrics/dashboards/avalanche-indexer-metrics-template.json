    {
      "id": 18,
      "type": "timeseries",
      "title": "RPC Errors by Method",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 44
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (method) (rate(indexer_rpc_calls_total{status=\"error\",job=~\"$job\",environment=~\"$environment\",evm_chain_id=~\"$evm_chain_id\",region=~\"$region\",cloud_provider=~\"$cloud_provider\"}[5m]))",
          "legendFormat": "{{method}}"
        }
      ]
    }
  ]
}
