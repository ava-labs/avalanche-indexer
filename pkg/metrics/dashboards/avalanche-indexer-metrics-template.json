              {
                "color": "orange",
                "value": 0.9
              },
              {
                "color": "green",
                "value": 0.99
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
